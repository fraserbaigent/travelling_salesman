CXX = g++
CFLAGS = -Wall -Wextra -O3 -std=c++17
#INCLUDE = -I/usr/include/eigen3 
LIB_OPTIONS = -lboost_program_options

################################################################################
################################################################################

%.o: %.cpp
	$(CXX)  $(CFLAGS) -c $<

clean:
	rm -f *.o core *~

################################################################################
################################################################################

TSP = travelling_salesman.o city.o

travelling_salesman : $(TSP)
	$(CXX) -o $@ $(CFLAGS) $(TSP) $(LIB) $(LIB_OPTIONS)
################################################################################
################################################################################
